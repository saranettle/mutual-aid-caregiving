<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mutual Aid Caregiving</title>
    <link rel="stylesheet" href="../../static/css/main.css">
</head>
<body>

    <header>
        <h1>Mutual Aid Caregiving</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/neighbors">Neighbors</a></li>
                <li><a href="/locations">Locations</a></li>
                <li><a href="/communities">Communities</a></li>
                <li><a href="/visits">Visits</a></li>
                <li><a href="/certifications">Certifications</a></li>
                <li><a href="/visit_types">Visit Types</a></li>
                <li><a href="/certify_neighbors">Certify Neighbors</a></li>
                <li><a href="/community_neighbors">Community Neighbors</a></li>
                <li><a href="/about">About</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <div id="edit">
            <form id="edit_community_neighbors" method="POST"  action="/edit_community_neighbors/{{data[0].communityHasNeighborID}}">
            <fieldset>
                <legend><strong>Update Community Neighbor </strong></legend>
                <input type="hidden" name="communityHasNeighborID" id="communityHasNeighborID" value="{{data[0].communityHasNeighborID}}" required>
                <label for="neighborID"> Neighbor </label>
                <select id="neighborID" name="neighborID">
                    {% for neighbor in neighbors %}
                        <!-- If the value iterated neighbor matches the value of the neighbor of community neighbor
                        currently Editing, pre-select that option -->
                        {% if neighbor['neighborID'] == data[0].neighbor %}
                            <option value="{{ neighbor['neighborID'] }}" selected> {{neighbor['name']}}</option>
                        {% else %}
                            <option value="{{ neighbor['neighborID'] }}"> {{neighbor['name']}}</option>
                        {% endif %}
                        <!-- End of this for loop -->
                    {% endfor %}
                </select>
                <label for="communityID"> Community </label>
                <select id="communityID" name="communityID">
                    {% for community in communities %}
                        <!-- If the value iterated community matches the value of the community of neighbor
                        currently Editing, pre-select that option -->
                        {% if community['communityID'] == data[0].community %}
                            <option value="{{ community['communityID'] }}" selected> {{community['communityName']}}</option>
                        {% else %}
                            <option value="{{ community['communityID'] }}"> {{community['communityName']}}</option>
                        {% endif %}
                        <!-- End of this for loop -->
                    {% endfor %}
                </select>
            </fieldset>
                <input class="btn btn-primary" type="submit" name="edit_community_neighbor" value="Update Community Neighbor ">
            </form>
        </div>
    </main>
    <footer>
        <p>Made by Chris Blum and Sara Nettle 2024</p>
    </footer>
    </body>
    </html>